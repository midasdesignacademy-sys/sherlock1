# LLM Configuration
OPENAI_API_KEY=your_key_here
ANTHROPIC_API_KEY=your_key_here
# Gemini (used by Synthesis and optional ODOS narrative)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1

# Embeddings: local (sentence-transformers) or openai. For API embeddings use EMBEDDING_PROVIDER=openai and set OPENAI_API_KEY.
EMBEDDING_PROVIDER=local
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=sherlock123
NEO4J_DATABASE=neo4j

# Chroma Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION=sherlock_documents

# Embedding Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# spaCy Configuration
SPACY_MODEL_PT=pt_core_news_lg
SPACY_MODEL_EN=en_core_web_lg

# Document Processing
MAX_FILE_SIZE_MB=100

# OCR Configuration
TESSERACT_CMD=
OCR_LANGUAGES=por+eng

# Entity Extraction
MIN_ENTITY_CONFIDENCE=0.7

# Semantic Linking
SEMANTIC_SIMILARITY_THRESHOLD=0.75
MAX_LINKS_PER_DOCUMENT=50

# PQMS Configuration
PQMS_GUARDIAN_THRESHOLD=0.05
PQMS_FIDELITY_MIN=0.99
PQMS_RCF_TARGET=0.95

# LangSmith (optional)
LANGCHAIN_API_KEY=
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=sherlock-intelligence

# Checkpointing (optional; set to path to enable resume)
# CHECKPOINT_DIR=./checkpoints

# Logging
LOG_LEVEL=INFO
